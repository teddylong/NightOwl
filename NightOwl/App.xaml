<Application x:Class="NightOwl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Login.xaml">
    <Application.Resources>  
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="MainWinStyle" Source="style\MainWinStyle.xaml"></ResourceDictionary>
                <ResourceDictionary x:Name="MyNotification" Source="NotifyIconResources.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>   
            <XmlDataProvider x:Key="XMLDataDataSource" Source="pack://siteOfOrigin:,,,/Data/XMLData.xml"/>
        </ResourceDictionary>   
    </Application.Resources>
</Application>
